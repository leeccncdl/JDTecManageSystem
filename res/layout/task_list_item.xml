<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/act_default_backcolor"
    android:orientation="vertical" >

    <LinearLayout
		style="@style/task_list_item_linear_tag">

        <TextView
			style="@style/task_list_singleline_tag"
            android:text="@string/list_mission_number" />

        <TextView
            android:id="@+id/task_list_mission_number_tv"
            style="@style/task_list_content" />
    </LinearLayout>

    <LinearLayout
		style="@style/task_list_item_linear_tag">

        <TextView
            style="@style/task_list_tag"
            android:text="@string/list_task_type" />

        <TextView
            android:id="@+id/task_list_task_type_tv"
            style="@style/task_list_content" />

        <TextView
            style="@style/task_list_tag"
            android:text="@string/list_car_number" />

        <TextView
            android:id="@+id/task_list_car_number_tv"
            style="@style/task_list_content" />
    </LinearLayout>

    <LinearLayout
		style="@style/task_list_item_linear_tag"
		android:layout_height="wrap_content">

        <TextView
			style="@style/task_list_singleline_tag"
			android:gravity="top"
            android:text="@string/list_device_number" />

        <TextView
            android:id="@+id/task_list_device_number_tv"
            style="@style/task_list_content"
            android:maxLines="2"
            android:layout_height="wrap_content" 
            android:layout_marginRight="10dp"/>
    </LinearLayout>

    <LinearLayout
		style="@style/task_list_item_linear_tag">

        <TextView
            style="@style/task_list_tag"
            android:text="@string/list_task_date" />

        <TextView
            android:id="@+id/task_list_task_date_tv"
            style="@style/task_list_content" />

        <TextView
            style="@style/task_list_tag"
            android:text="@string/list_print_date" />

        <TextView
            android:id="@+id/task_list_print_date_tv"
            style="@style/task_list_content" />
    </LinearLayout>

    <LinearLayout
		style="@style/task_list_item_linear_tag"
		android:layout_height="40dp"
        android:background="@drawable/list_bar_back"
        android:gravity="right|center_vertical">

        <Button
            android:id="@+id/task_list_detial_btn"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:layout_marginRight="8dp"
            android:textSize="@dimen/medium_text_size"
            android:background="@drawable/btndarkblue_sel"
            android:text="@string/list_detial"/>

        <Button
            android:id="@+id/task_list_print_btn"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:textSize="@dimen/medium_text_size"
            android:background="@drawable/btnblue_sel"
            android:text="@string/list_print"/>
    </LinearLayout>

</LinearLayout>